	author = {Filipová, Lenka and Lieb, David A. and Grandjean, Frédéric and Petrusek, Adam},
	month = dec,
	year = {2011},
	keywords = {Cambaridae, COI variation, conservation, Europe, introduction history, invasive crayfish, Orconectes limosus},
	pages = {871--881},
}

@article{gouin_population_2006,
	bibtex_show={true},
	title = {Population genetic structure of the endangered crayfish {Austropotamobius} pallipes in {France} based on microsatellite variation: biogeographical inferences and conservation implications},
	volume = {51},
	issn = {1365-2427},
	shorttitle = {Population genetic structure of the endangered crayfish {Austropotamobius} pallipes in {France} based on microsatellite variation},
