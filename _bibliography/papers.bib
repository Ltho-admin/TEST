	author = {Préau, Clémentine and Isselin-Nondedeu, Francis and Sellier, Yann and Bertrand, Romain and Grandjean, Frédéric},
	month = jan,
	year = {2019},
	keywords = {Ecological niche modeling, Global change, Landscape change, Range margin amphibians},
	pages = {27--38},
}
