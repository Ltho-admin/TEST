	dimensions = {true},
	title = {A {Giant} {Genome} for a {Giant} {Crayfish} ({Cherax} quadricarinatus) {With} {Insights} {Into} cox1 {Pseudogenes} in {Decapod} {Genomes}},
	volume = {11},
